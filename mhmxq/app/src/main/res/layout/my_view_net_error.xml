<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v4.widget.Space
        android:id="@+id/centerAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/centerAnchor"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:drawableTop="@mipmap/net_error_bg"
        android:text="@string/network_error_hint"
        android:textAppearance="@style/TextAppearance"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/textSizePrimary"/>

    <Button
        android:id="@id/viewErrorRetry"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_below="@id/centerAnchor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/net_error_retry_bg"
        android:text="@string/network_error_retry"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</RelativeLayout>