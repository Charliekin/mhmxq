<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mhm.xq.view.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:center_title_text_color="@color/white"
        app:center_title_text_size="@dimen/titleCenterTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_icon="@mipmap/back"/>

    <TextView
        android:id="@+id/tvAuthUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_user"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textSizePrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"
        app:layout_constraintVertical_bias="0.3"/>

    <EditText
        android:textSize="@dimen/textSizePrimary"
        android:id="@+id/etAuthUser"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxLines="1"
        android:hint="@string/mobile_hint"
        android:maxLength="11"
        android:textColor="@color/textColorPrimary"
        android:inputType="phone"
        android:textColorHint="@color/commonTextColor"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginLeft="@dimen/left_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintLeft_toRightOf="@id/tvAuthUser"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tvAuthPwd"
        android:text="@string/login_password"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textSizePrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintTop_toBottomOf="@id/tvAuthUser"/>

    <EditText
        android:id="@+id/etAuthPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="50dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/textColorPrimary"
        android:hint="@string/password_hint"
        android:textColorHint="@color/commonTextColor"
        android:textSize="@dimen/textSizePrimary"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tvAuthUser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAuthUser"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginEnd="50dp"/>

    <Button
        android:id="@+id/btAuth"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textSizePrimary"
        android:background="@drawable/my_login_btn_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAuthPwd"/>

</android.support.constraint.ConstraintLayout>