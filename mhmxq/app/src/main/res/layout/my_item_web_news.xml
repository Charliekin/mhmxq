<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/news_tab_margin"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/left_margin"
    android:paddingTop="@dimen/news_tab_margin">

    <TextView
        android:id="@+id/tvWebNewsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/titleCenterTextSize"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivWebNewsIcon"
        tools:text="李克强:厚植创业创新沃土支持发明创造人才厚植创业创新沃土支持发明创造人才"/>

    <TextView
        android:id="@+id/tvWebNewsTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="9dp"
        android:textSize="@dimen/textSizeTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvWebNewsTitle"
        tools:text="02-02"/>

    <TextView
        android:id="@+id/tvWebNewsAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/textSizeTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvWebNewsTime"
        app:layout_constraintRight_toLeftOf="@id/ivWebNewsIcon"/>

    <ImageView
        android:id="@+id/ivWebNewsIcon"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toRightOf="@id/tvWebNewsTitle"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>